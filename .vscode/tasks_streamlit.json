{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Streamlit",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "streamlit",
                "run",
                "streamlit_app/app.py",
                "--server.port",
                "8501",
                "--server.address",
                "0.0.0.0"
            ],
            "group": "run",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}
