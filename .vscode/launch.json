{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/Scripts/python.exe"
    },
    {
      "name": "Streamlit App",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "streamlit_app/app.py",
        "--server.port",
        "8501",
        "--server.address",
        "0.0.0.0"
      ],
      "jinja": true,
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/Scripts/python.exe"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}
